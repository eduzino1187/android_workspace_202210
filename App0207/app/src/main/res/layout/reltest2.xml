<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button
        style="@style/bt_style"
        android:id="@+id/bt_1"
        android:layout_alignTop="@id/bt_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1" />

    <Button
        style="@style/bt_style"
        android:id="@+id/bt_2"
        android:layout_alignEnd="@id/bt_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2" />

    <Button
        style="@style/bt_style"
        android:id="@+id/bt_6"
        android:layout_alignBottom="@id/bt_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6" />

    <Button
        style="@style/bt_style"
        android:id="@+id/bt_center"
        android:layout_below="@id/bt_2"
        android:text="center"
        android:layout_toRightOf="@id/bt_1"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <Button
        style="@style/bt_style"
        android:layout_toRightOf="@id/bt_center"
        android:layout_alignTop="@id/bt_center"
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        style="@style/bt_style"
        android:layout_toRightOf="@id/bt_center"
        android:layout_alignBottom="@id/bt_center"
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        style="@style/bt_style"
        android:layout_alignLeft="@id/bt_center"
        android:layout_below="@id/bt_center"
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>